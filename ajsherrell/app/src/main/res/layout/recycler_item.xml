<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="recyclerClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="viewModel"
            type="com.ajsherrell.weatherapp.viewModel.WeatherListViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{recyclerClickListener}"
        app:cardCornerRadius="@dimen/cardCornerRadius"
        app:cardElevation="@dimen/cardElevation"
        app:contentPadding="@dimen/contentPadding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listDayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                android:text="@{viewModel.weatherListDay}"
                tools:text="Thursday" />

            <ImageView
                android:id="@+id/rvWeatherIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                app:imageRes="@{viewModel.weatherListIcon}" />

            <TextView
                android:id="@+id/listMinMaxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                android:text="@{viewModel.weatherListMinMaxTemp}"
                tools:text="low 34 / high 60" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>