<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="weather"
            type="com.ajsherrell.weatherapp.model.Weather" />
        <variable
            name="list"
            type="com.ajsherrell.weatherapp.model.List" />
        <variable
            name="main"
            type="com.ajsherrell.weatherapp.model.Main" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listDayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                android:text="@{list.dt_txt}"
                tools:text="Thursday" />

            <ImageView
                android:id="@+id/rvWeatherIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                app:rvWeatherIcon="@{weather.icon}" />

            <TextView
                android:id="@+id/listMinMaxTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/listDayMargin"
                android:layout_weight="1"
                android:text="@{main.getMinMaxTemp()}"
                tools:text="low 34 / high 60" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>